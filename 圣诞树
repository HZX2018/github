public class 圣诞树
{

	public static void main(String[] args)
	{
		//	做树叶部分
		for (int k = 10; k > 0; k--) 
		{
			for (int c = 1; c < k; c++) 
			{
				System.out.print(" ");   //设计空白部分
			}
			for (int count = 1; count <= 1+(10-k)*2; count++)
					{
						System.out.print("*");	 //设计树叶
					}
			System.out.println();
		}
		//做树干部分
		for (int g = 1; g <=5; g++) //循环“***”5次
		{
		
			for (int i = 1; i <=8; i++)  //设计空白部分
			{
				System.out.print(" ");
			}
			System.out.println("***");
		}

	}
